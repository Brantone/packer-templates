{
  "variables": {
    "vm_name": "redox-amd64",
    "iso_url": "https://github.com/redox-os/redox/releases/download/0.3.5/redox_0.3.5.iso",
    "iso_checksum_type": "sha256",
    "iso_checksum_url": "https://github.com/redox-os/redox/releases/download/0.3.5/SHA256SUM",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "6h",
    "disk_size_MB": "8000",
    "ram_MiB": "1024",
    "http_directory": "http",
    "shutdown_command": "echo 'vagrant' | sudo -S halt -p"
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -ES sh {{.Path}}",
      "scripts": [
        "fix-vagrant-ssh.redox.sh",
        "cleanup.redox.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{ user `vm_name` }}-{{.Provider}}.box",
      "compression_level": "9",
      "vagrantfile_template": "Vagrantfile"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Linux_64",
      "vm_name": "{{ user `vm_name` }}",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_checksum_url": "{{ user `iso_checksum_url` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_wait_timeout": "{{ user `ssh_wait_timeout` }}",
      "disk_size": "{{ user `disk_size_MB` }}",
      "guest_additions_mode": "disable",
      "virtualbox_version_file": "",
      "vboxmanage": [ ["modifyvm", "{{.Name}}", "--memory", "{{ user `ram_MiB` }}"] ],
      "http_directory": "{{ user `http_directory` }}",
      "boot_command": [
        "<wait>"
      ],
      "shutdown_command": "{{ user `shutdown_command` }}"
    }
  ]
}
