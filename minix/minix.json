{
  "builders": [
    {
      "type": "virtualbox-iso",
      "vm_name": "minix",
      "iso_url": "minix_R3.4.0rc6-d5e4fc0.iso",
      "iso_checksum_type": "md5",
      "iso_checksum": "55f8ca78ee6bdb7c12c02c69a2925439",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "1800s",
      "disk_size": 1000,
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"]
      ],
      "guest_additions_mode": "disable",
      "virtualbox_version_file": "",
      "boot_command": [
        "<enter><wait10><wait10><wait10><wait10>",
        "root<enter><wait>",
        "setup<enter><enter><wait>",
        "<enter><enter><wait10><wait10>",
        "<enter><wait>",
        "<enter><wait5>",
        "yes<enter><wait10><wait10><wait10>",
        "<enter><wait>",
        "<enter><wait>",
        "<enter><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10>",
        "<enter><wait>",
        "<enter><wait>",
        "<enter><wait>",
        "reboot<enter><wait10>",
        "<enter><wait10><wait10>",
        "root<enter><wait>",
        "user add -m vagrant<enter><wait>",
        "sed 's/wheel:.*/wheel:*:0:root,vagrant/' /etc/group | tee /etc/group<enter><wait>",
        "passwd vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "mkdir -p /home/vagrant/.ssh<enter><wait>",
        "echo 'ssh-rsa  vagrant insecure public key' >/home/vagrant/.ssh/authorized_keys<enter><wait>",
        "chown -R vagrant: /home/vagrant/.ssh<enter><wait>",
        "chmod 0700 /home/vagrant/.ssh<enter><wait>",
        "chmod 0600 /home/vagrant/.ssh/authorized_keys<enter><wait>",
        "yes | pkgin update<enter><wait10>",
        "yes | pkgin install openssh<enter><wait10>",
        "echo 'sshd=YES' >>/etc/rc.conf<enter><wait>",
        "echo 'UseDNS no' >>/usr/pkg/etc/ssh/sshd_config<enter><wait>",
        "mkdir -p /etc/rc.d<enter><wait>",
        "cp /usr/pkg/etc/rc.d/sshd /etc/rc.d/<enter><wait>",
        "sh /usr/pkg/etc/rc.d/sshd start<enter><wait>"
      ],
      "shutdown_command": "su root -c '/sbin/halt -p'"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} su -m root -c 'sh \"{{.Path}}\"'",
      "scripts": [
        "cleanup.minix.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "minix-{{.Provider}}.box",
      "compression_level": "9"
    }
  ]
}
