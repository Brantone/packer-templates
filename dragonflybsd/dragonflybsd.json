{
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "FreeBSD_64",
      "vm_name": "dragonflybsd",
      "iso_url": "http://mirror-master.dragonflybsd.org/iso-images/dfly-x86_64-5.0.1_REL.iso",
      "iso_checksum_type": "md5",
      "iso_checksum": "2f59975fce621af34466d5b8f752cc4c",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "boot_wait": "6s",
      "ssh_wait_timeout": "1800s",
      "disk_size": 8000,
      "guest_additions_mode": "disable",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"]
      ],
      "http_directory": "http",
      "boot_command": [
        "1<wait10><wait10><wait10>",
        "root<enter><wait>",
        "dhclient em0<enter><wait5>",
        "fetch -o /tmp/install.sh http://{{ .HTTPIP }}:{{ .HTTPPort }}/install.sh && sh /tmp/install.sh && reboot<enter>"
      ],
      "shutdown_command": "sudo halt -p"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -ES sh '{{.Path}}'",
      "scripts": [
        "ssh-configure-vagrant-key.dragonflybsd.sh",
        "cleanup.dragonflybsd.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "dragonflybsd-{{.Provider}}.box",
      "compression_level": "9",
      "vagrantfile_template": "Vagrantfile"
    }
  ]
}
